{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
  "lib": [
    "ES2017",
    "ES2015",
    "ES7",
    "ES6"
  ]
}